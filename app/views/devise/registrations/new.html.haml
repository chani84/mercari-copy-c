.registrationWrapper
  .signup
    %header.headerSignup
      %image.logoSignup{:src => "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3371656568"}
  .registrationMain
    .registrationMainTop
      %h2.registrationMainTopTitle 会員情報入力
    .registrationMainInner
      .registrationMainInnerForm
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .formGroup
          .formGroupNickname
            .formGroupTitle
              ニックネーム
              %span.formRequire 必須
            = f.text_field :nickname,class: "formGroupForm", placeholder: "  例) メルカリ太郎", autofocus: true
          .formGroupEmail
            .formGroupTitle
              メールアドレス
              %span.formRequire 必須
            = f.email_field :email,class: "formGroupForm", placeholder: "  PC・携帯どちらでも可"
          .formGroupPassword
            .formGroupTitle
              パスワード
              %span.formRequire 必須
            = f.password_field :password,class: "formGroupForm", autocomplete: "off", placeholder: "  6文字以上"
          .formGroupPassword
            .formGroupTitle
              パスワード（確認）
              %span.formRequire 必須
            = f.password_field :password_confirmation,class: "formGroupForm", autocomplete: "off", placeholder: "  6文字以上"
          .formGroupRecapcha
            / = recaptcha_tags
          .formGroupButton
            = f.submit "登録する", class: "formGroupButton"
  .signup
    %footer.footerSignup
      .footerSignupInner.clearfix
        %nav.clearfix
          %li= link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
          %li= link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
          %li= link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
        %image.footerlogo{:src => "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?562024368"}
          %p
            %small ©︎2018 Merecari
